{% extends "naturescot/template.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/skip-link/macro.njk" import govukSkipLink %}
{% from "naturescot/components/header/macro.njk" import naturescotHeader %}

{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "naturescot/components/footer/macro.njk" import naturescotFooter %}

{% set assetPath = pathPrefix + "/govuk-frontend/assets" %}

{% set serviceRoot = pathPrefix if pathPrefix.length > 0 else 
	"" %}
{# The following allows the user to click on the header once they've logged in
   and not be bounced back to the start of the login process, but the start of
   the submit process. #}
{% set servicePage = "/target-species" if model.loggedInRegNo !== undefined else "/" %}

{% block pageTitle %}NatureScot - Licensing - Trap Registration - Meat Bait Return{% endblock %}

{% block headIcons %}
	<link rel="shortcut icon" type="image/png" sizes="192x192" href="{{hostPrefix}}{{pathPrefix}}/dist/icon-192x192.png">

	<link rel="apple-touch-icon" sizes="192x192" href="{{hostPrefix}}{{pathPrefix}}/dist/icon-192x192.png">
	<link rel="apple-touch-icon" sizes="180x180" href="{{hostPrefix}}{{pathPrefix}}/dist/icon-180x180.png">
	<link rel="apple-touch-icon" sizes="167x167" href="{{hostPrefix}}{{pathPrefix}}/dist/icon-167x167.png">
	<link rel="apple-touch-icon" sizes="152x152" href="{{hostPrefix}}{{pathPrefix}}/dist/icon-152x152.png">
	<link rel="apple-touch-icon" href="{{hostPrefix}}{{pathPrefix}}/dist/icon-120x120.png">

	<link rel="canonical" href="{{hostPrefix}}{{pathPrefix}}"/>
	<meta name="description" content="Use this service to submit your Trap Registration Return.">

	<!-- OpenGraph Data -->
	<meta property="og:title" content="NatureScot - Licensing - Trap Registration - Meat Bait Return">
	<meta property="og:type" content="website">
	<meta property="og:image" content="{{hostPrefix}}{{pathPrefix}}/dist/naturescot-opengraph-image.png">
	<meta property="og:url" content="{{hostPrefix}}{{pathPrefix}}">
	<meta property="og:site_name" content="NatureScot - Licensing">
	<meta property="og:description" content="Use this service to submit your Trap Registration Return.">
	<meta property="og:image:width" content="1039">
	<meta property="og:image:height" content="544">
	<meta property="og:image:alt" content="NatureScot Logo">

	<!-- Twitter Card Data -->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:site" content="@nature_scot">

{% endblock %}

{% block head %}
	<link rel="stylesheet" href="{{pathPrefix}}/dist/main.css">
{% endblock %}

{% block skipLink %}
	{{ govukSkipLink({
    href: "#main-content",
    text: "Skip to main content"
  }) }}
{% endblock %}

{% block header %}
	{% if (not model) 
		or(model and(not model.seenCookie)) %}
		<div class="naturescot-cookie-bar">
			<div class="govuk-width-container">
				<p class="govuk-body">
          NatureScot uses essential session cookies to remember your progress
          through this application.
          <a class="govuk-link" rel="noreferrer noopener" target="_blank" href="https://www.nature.scot/cookie-policy">
            Find out more.&nbsp;(opens in new tab)
          </a>
				</p>
			</div>
		</div>
	{% endif %}

	{{ naturescotHeader({
    homepageUrl: "https://www.nature.scot/professional-advice/safeguarding-protected-areas-and-species/licensing",
    containerClasses: "govuk-width-container",
    serviceName: "Trap Registration - Meat Bait Return",
    serviceUrl: serviceRoot + servicePage,
    attributes: {
      id: "top-of-page"
    }
  }) }}
{% endblock %}

{% set mainClasses = "app-main-class" %}

<div class="govuk-width-container">
	{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
	{% block beforeContent %}
		{{ govukPhaseBanner({
      tag: {
        text: "alpha"
      },
      html: 'This is a new service â€“ your <a class="govuk-link" rel="noreferrer noopener" target="_blank" href="http://gateway.snh.gov.uk/go/?id=40">feedback&nbsp;(opens in new tab)</a> will help us to improve it.'
    }) }}
		{% if backUrl %}
			{{ govukBackLink({
        text: "Back",
        href: pathPrefix + '/' + backUrl
      }) }}
		{% endif %}
	{% endblock %}
</div>

<div class="govuk-width-container">
	{% block content %}{% endblock %}
</div>

{% block footer %}
	{{ naturescotFooter({
    meta: {
      items: [
        {
          href: "/cross-service-pages/privacy-policy",
          text: "Privacy"
        },
        {
          href: "https://www.nature.scot/cookie-policy",
          text: "Cookies"
        },
        {
          href: "https://www.nature.scot/accessibility",
          text: "Accessibility"
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
	<script src="{{pathPrefix}}/govuk-frontend/all.js"></script>
	<script src="{{pathPrefix}}/init.js"></script>
{% endblock %}