{% extends "_base.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/accordion/macro.njk" import govukAccordion %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <form method="post">
    <h1 class="govuk-heading-xl">
      Confirm your nil return
    </h1>

 {{ govukSummaryList({
      rows: [
        {
          key: {
            text: "Non-target species to report"
          },
          value: {
            text: 'Yes' if model.targetSpecies === true else 'No'
          },
          actions: {
            items: [
              {
                href: pathPrefix + "/target-species",
                text: "Change",
                visuallyHiddenText: "Target species"
              }
            ]
          }
        }
      ]
    }) }}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h2 class="govuk-heading-m">
          Now send your return
        </h2>

        <p class="govuk-body">
          It is your responsibility to ensure that the information you have provided
          is correct before sending this return.
        </p>

      </div>
    </div>

    {{ govukButton({
      text: "Accept and send",
      classes: "naturescot-forward-button"
    }) }}

  </form>
{% endblock %}
